<Window x:Class="WpfCattery.AddAdopterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Aggiungi Adottante" Height="450" Width="300">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="TBFirstName" Grid.Row="0" Text="Nome" Margin="0,0,0,10" Height="22"/>
        <TextBox x:Name="TBLastName" Grid.Row="1" Text="Cognome" Margin="0,0,0,10" Height="22"/>
        <TextBox x:Name="TBEmail" Grid.Row="2" Text="Email" Margin="0,0,0,10" Height="22"/>
        <TextBox x:Name="TBPhone" Grid.Row="3" Text="Telefono" Margin="0,0,0,10" Height="22"/>
        <TextBox x:Name="TBFiscalCode" Grid.Row="4" Text="Codice Fiscale" Margin="0,0,0,10" Height="22"/>
        <TextBox x:Name="TBCity" Grid.Row="5" Text="Città" Margin="0,0,0,10" Height="22"/>
        <TextBox x:Name="TBCap" Grid.Row="6" Text="CAP" Margin="0,0,0,10" Height="22"/>

        <Button x:Name="BTNAggiungi" Grid.Row="8" Content="Aggiungi" Width="100" Click="BTNAggiungi_Click"/>
    </Grid>
</Window>