<Window x:Class="WpfCattery.UpdateAdopterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dettagli Adottante"
        Height="480" Width="320"
        WindowStartupLocation="CenterOwner">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="16" VerticalAlignment="Top">
            <TextBlock Text="Dettagli Adottante"
                       FontSize="24"
                       FontWeight="Bold"
                       Margin="0,0,0,16"/>

            <TextBlock Text="Nome:"/>
            <TextBox x:Name="TBFirstName" Margin="0,2,0,10"/>

            <TextBlock Text="Cognome:"/>
            <TextBox x:Name="TBLastName" Margin="0,2,0,10"/>

            <TextBlock Text="Email:"/>
            <TextBox x:Name="TBEmail" Margin="0,2,0,10"/>

            <TextBlock Text="Telefono:"/>
            <TextBox x:Name="TBPhone" Margin="0,2,0,10"/>

            <TextBlock Text="Codice Fiscale:"/>
            <TextBox x:Name="TBFiscalCode" IsReadOnly="True" Background="#EEE" Margin="0,2,0,10"/>

            <TextBlock Text="Città:"/>
            <TextBox x:Name="TBCity" Margin="0,2,0,10"/>

            <TextBlock Text="CAP:"/>
            <TextBox x:Name="TBCap" Margin="0,2,0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="Elimina" Width="80" Click="Elimina_Click" Margin="5"/>
                <Button Content="Chiudi" Width="80" Click="Close_Click" Margin="5"/>
                <Button Content="Salva" Width="80" Click="Save_Click" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>