<Window x:Class="WpfCattery.ManageCatsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ManageCatsWindow" Height="450" Width="800">
    <Grid Margin="12">
        <ListBox x:Name="CatsList"
                 MouseDoubleClick="CatsList_MouseDoubleClick">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock>
                        <Run Text="{Binding name}" />
                        <Run Text="  ID: " />
                        <Run Text="{Binding ID}" />
                    </TextBlock>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
