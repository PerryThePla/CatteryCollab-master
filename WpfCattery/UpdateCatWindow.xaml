<Window x:Class="WpfCattery.UpdateCatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dettagli Gatto"
        Height="550" Width="320"
        WindowStartupLocation="CenterOwner">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="16" VerticalAlignment="Top">

            <TextBlock Text="Dettagli Gatto"
                       FontSize="24"
                       FontWeight="Bold"
                       Margin="0,0,0,16"/>

            <!-- Nome -->
            <TextBlock Text="Nome:"/>
            <TextBox Text="{Binding name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,2,0,10"/>

            <!-- Razza -->
            <TextBlock Text="Razza:"/>
            <TextBox Text="{Binding breed, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,2,0,10"/>

            <!-- Sesso -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Maschio:" VerticalAlignment="Center"/>
                <CheckBox IsChecked="{Binding ismale, Mode=TwoWay}" Margin="6,0,0,0"/>
            </StackPanel>

            <!-- Date -->
            <TextBlock Text="Data Arrivo:"/>
            <DatePicker x:Name="DParrival" SelectedDate="{Binding arrivalDate, Mode=TwoWay}" Margin="0,2,0,10"/>

            <TextBlock Text="Data Partenza:"/>
            <DatePicker x:Name="DPdeparture" SelectedDate="{Binding departureDate, Mode=TwoWay}" Margin="0,2,0,10"/>

            <TextBlock Text="Data Nascita:"/>
            <DatePicker x:Name="DPbirth" SelectedDate="{Binding birthDate, Mode=TwoWay}" Margin="0,2,0,10"/>

            <!-- Descrizione -->
            <TextBlock Text="Descrizione:"/>
            <TextBox Text="{Binding Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                     AcceptsReturn="True" Height="60" Margin="0,2,0,10"/>

            <!-- ID (sola lettura) -->
            <TextBlock Text="ID:"/>
            <TextBox Text="{Binding ID}" IsReadOnly="True" Background="#EEE" Margin="0,2,0,10"/>

            <!-- Pulsanti -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                <Button Content="Elimina" Width="80" Click="Elimina_Click"/>
                <Button Content="Chiudi" Width="80" Click="Close_Click"/>
                <Button Content="Salva" Width="80" Click="Save_Click"/>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</Window>
