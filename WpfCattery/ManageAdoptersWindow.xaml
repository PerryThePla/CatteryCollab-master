<Window x:Class="WpfCattery.ManageAdoptersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestione Adottanti" Height="450" Width="800">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Cerca:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox x:Name="TBSearch" Width="200" TextChanged="TBSearch_TextChanged"/>
        </StackPanel>

        <ListBox x:Name="AdoptersList" Grid.Row="1"
                 MouseDoubleClick="AdoptersList_MouseDoubleClick">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock>
                            <Run Text="{Binding FirstName}" FontWeight="Bold"/>
                            <Run Text=" "/>
                            <Run Text="{Binding LastName}" FontWeight="Bold"/>
                        </TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>